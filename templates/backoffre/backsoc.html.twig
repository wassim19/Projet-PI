        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">offre gere par la societe </h2>
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active"> <i class="fas fa-chevron-right"></i> <span>offre</span></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--=================================
