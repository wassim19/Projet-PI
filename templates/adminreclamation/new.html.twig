{% extends 'basebackadmin.html.twig' %}
{% block body %}

    <!--=================================
    inner banner -->
    <div class="header-inner bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary">add a complaint</h2>
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="{{ path('adminreclamation_index') }}">complaints</a></li>
                        <li class="breadcrumb-item active"> <i class="fas fa-chevron-right"></i> <span> add a complaint</span></li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!--=================================
    inner banner -->

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade active show" id="reclamation" role="tabpanel" aria-labelledby="Job-detail-tab">
            <section class="space-ptb">
                <div class="container">
                    {{ form_start(form) }}
                    {{ form_row(form.motif,{ 'attr':{ 'class':"form-control"}}) }}
                    {{ form_row(form.message,{ 'attr':{ 'placeholder':"message",'class':"form-control"}}) }}
                    {{ form_row(form.gsm,{ 'attr':{ 'placeholder':"gsm",'class':"form-control"}}) }}
                    {{ form_row(form.accept) }}

                    <div align="center"><button type="submit" class="btn btn-primary btn-md">save</button></div>
                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </div>
{% endblock %}