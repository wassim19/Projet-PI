{% extends 'base.html.twig' %}

{% block title %}Hello RendezVousController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 id="click"> <li ><a href="{{ path('p')}}" class="text-primary" data-toggle="tooltip" ><i class="dropdown-item"></i>UPLOAD TEST</a></li></h1>
            <h1>You can write your answers before :</h1>
            <h1 id="countdown"></h1>
            {{ form(form, {'attr': {'class': 'form'}}) }}
            <script>
                let span=document.querySelector("div h1");
                span.addEventListener("click", function (){setInterval(click,1000);});
                

                const startingMinutes =1;
                let time=startingMinutes*60;
                const countdownEl= document.getElementById('countdown');

                function click(){
                    const minutes = Math.floor(time / 60);
                    let seconds = time % 60;
                    seconds = seconds < 10 ? '0' + seconds : seconds;
                    countdownEl.innerHTML = `${minutes}:${seconds}`;

                       if(time==0){
                           let billingItems = document.querySelector(".form");
                           for (let i = 1; i < 21; i++) {
                               billingItems[i].disabled =true;
                           }
                       }
                       else {time--;}
                }
            </script>

</div>
{% endblock %}
