{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <!--=================================
inner banner -->
    <div class="header-inner bg-light text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2 class="text-primary"> reclamation</h2>

                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Motif</th>
                <th>Message</th>
                <th>gsm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.motif }}</td>
                <td>{{ reclamation.message }}</td>
                <td>{{ reclamation.gsm }}</td>
                <td>
                    <button ><a href="{{ path('reclamation_delete', {'id': reclamation.id}) }}">delete</a>
                    </button>
                    <button>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                    </button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div align="center"> <a  href="{{ path('reclamation_new') }}"><button type="submit" class="btn btn-primary btn-md" >ajouter</button></a></div>
{% endblock %}
