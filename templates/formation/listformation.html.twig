{% extends 'base.html.twig' %}
{% block body %}

    <h4 align="center"> list formations </h4>
    <table border="0">
        <thead>
        <tr>
            <th> image </th>
            <th> title </th>
            <th> description </th>
            <th> date </th>
            <th> localisation </th>
        </tr>

        </thead>
        <tbody>
        {% for I in formation %}
        <tr>
            <td> <img class="img-fluid" src="images/{{ I.imagef }}" alt=""></td>
            <td> {{ I.title }} </td>
            <td>  {{ I.description }} </td>
            <td>  {{ I.dateAt|date('Y-m-d H:i:s') }} </td>
            <td>   {{ I.localisation }} </td>


        </tr>
        {% endfor %}
        </tbody>




    </table>
    <a class="btn btn-primary" value="download" href="{{ path('listf') }}"><i class="fa fa-print"></i></a>


{% endblock %}

