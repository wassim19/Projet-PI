{% extends 'base.html.twig' %}
{% block body %}


    <div>
        <h1 align="center">formations list </h1>
        <table border="4" align="center">
            <tr>
                <td>TITLE</td>
                <td>DESCRIPTION</td>
                <td>DATE</td>
                <td>LOCALISATION</td>
            </tr>
            {% for I in formations %}
                <tr>
                    <td> {{ I.title }}</td>
                    <td> {{ I.description }}</td>
                    <td> {{ I.dateAt|date('Y-m-d H:i:s') }}</td>
                    <td> {{ I.localisation }}</td>
                    <td><img class="img-fluid" src="images/{{ I.imagef }}" alt=""></td>
                    <td><a class="btn btn-danger" value="supprimer" href="{{ path('delformationadmin',{'id' : I.id }) }}">supprimer</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
{% block js %}
    <!-- JS Global Compulsory (Do not remove)-->
    <script src="js/jquery-3.4.1.min.js"></script>
    <script src="js/popper/popper.min.js"></script>

    <!-- Page JS Implementing Plugins (Remove the plugin script here if site does not use that feature)-->
    <script src="js/select2/select2.full.js"></script>
    <script src="js/datetimepicker/moment.min.js"></script>
    <script src="js/datetimepicker/datetimepicker.min.js"></script>

    <!-- Template Scripts (Do not remove)-->
    <script src="js/custom.js"></script>

{% endblock %}
