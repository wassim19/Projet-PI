{% extends 'base.html.twig' %}
{% block content %}
{% endblock %}

{% block body %}
    
    <div class="tab-content" id="formationtab">
        <div class="tab-pane fade active show" id="formation-detail" role="tabpanel" aria-labelledby="formation-detail-tab">
            <section class="space-ptb">
                <div class="container">
                    {{ form_start(form) }}
                    {{ form_row(form.title,{ 'attr':{'placeholder':"formation Title" , 'class':"form-control"}}) }}
                    {{ form_row(form.description,{ 'attr':{'placeholder':"formation decription" ,'class':"form-control"}}) }}
                    {{ form_row(form.dateAt) }}
                    {{ form_row(form.localisation,{ 'attr':{'placeholder':"formation description" ,'class':"form-control"}}) }}
                    {{ form_row(form.my_picture,{ 'attr':{ 'class':"upload-file"}}) }}
                    {{ form_row(form.Id_Soc,{ 'attr':{ 'placeholder':"idsoc",'class':"form-control"}}) }}
                    {{ form_row(form.Add,{ 'attr':{ 'class':"btn btn-primary"}}) }}
                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </div>







{% endblock %}




{% block js %}
    <!--=================================
    Javascript -->

    <!-- JS Global Compulsory (Do not remove)-->
    <script src="js/jquery-3.4.1.min.js"></script>
    <script src="js/popper/popper.min.js"></script>
    <script src="js/bootstrap/bootstrap.min.js"></script>

    <!-- Page JS Implementing Plugins (Remove the plugin script here if site does not use that feature)-->
    <script src="js/select2/select2.full.js"></script>

    <!-- Template Scripts (Do not remove)-->
    <script src="js/custom.js"></script>
    <script src="js/datetimepicker/moment.min.js"></script>
    <script src="js/datetimepicker/datetimepicker.min.js"></script>




{% endblock %}

